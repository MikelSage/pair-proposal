<h1>Edit Your Info</h1>
<div class="row text-center">
  <%= form_for(@user) do |f|%>
    <div class="form-group", style="margin-bottom: 40px">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :bio %>
      <%= f.text_area :bio, class: "form-control" %>
    </div>

    <div class="row">
      <h3>Select Your Strong Topics</h3>
      <%= collection_check_boxes(:user, :topic_ids, Topic.all, :id, :name) do |o| %>
        <div class="checkbox" style="height: 10%; width: 33%; display: inline-block;">
          <%= o.label {o.check_box(type: 'checkbox') + o.text} %>
        </div>
      <% end %>
    </div>

    <%= f.submit 'Submit Changes' %>
  <% end %>
</div>

<%= render partial: 'tutor_dates/form' %>
